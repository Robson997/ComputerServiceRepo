<div id="myBtnContainer">
    <button class="btn-filtr active" onclick="@Model.UpdateInex("none")">
        Show all</button>
        <button class="btn-filtr" onclick="@Model.UpdateInex("Procesor")" ;> Procesor</button>
        <button class="btn-filtr" onclick="@Model.UpdateInex("monitor")" ;> Monitor</button>
        <button class="btn-filtr" onclick="@Model.UpdateInex("cards")" ;"> Cards</button>
        <button class="btn-filtr" onclick="@Model.UpdateInex("headphones")" ;"> Headophones</button>
        <p></p>

</div>
<div class="s-container">


    @{
        if (Model != null)
        {
            foreach (var Data in Model.itemsToPost)
            {
                <div class="filterDiv @Data.Type">
                    <div class="ss-container">
                        <p></p>
                        <p></p>
                        <div class="picture"><img src="/@Data.Image" width=200 height=200 alt="Alternate Text" /></div>
                        <div><h2>@Data.Name</h2></div>
                        <div class="line2"></div>
                        <div class="Price">Price: $@Convert.ToInt32(Data.Price)</div>
                        @if (Convert.ToInt32(Data.Price) > 200)
                        {
                            <div> transport for free </div>
                        }
                        else
                        {
                            <div> free transort for over $200 </div>
                        }
                        <div class="line2"></div>
                        <div><button type="submit" class="button">Add to cart</button></div>
                        <p></p>
                        <p></p>
                       
                    </div>
                </div>


            }
        }
    }
</div>

